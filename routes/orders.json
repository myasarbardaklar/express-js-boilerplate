{
  "routes": [
    {
      "method": "GET",
      "path": "/orders",
      "handler": "OrderController.find",
      "authenticated": true
    },
    {
      "method": "GET",
      "path": "/orders/:id",
      "handler": "OrderController.findOne",
      "authenticated": true
    },
    {
      "method": "POST",
      "path": "/orders",
      "handler": "OrderController.create",
      "permissions": {
        "anonymous": {
          "permission": false,
          "error": "You must be logged in to check the page."
        }
      }
    },
    {
      "method": "DELETE",
      "path": "/orders/:id",
      "handler": "OrderController.delete",
      "permissions": {
        "anonymous": {
          "permission": false,
          "error": "You must be logged in to check the page."
        }
      }
    }
  ]
}
